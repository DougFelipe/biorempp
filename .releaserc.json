{
  "preset": "conventionalcommits",
  "branches": ["main"],
  "npmPublish": false,
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "docs", "release": false},
          {"type": "test", "release": false},
          {"type": "style", "release": false},
          {"type": "refactor", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "fix", "release": "patch"},
          {"type": "feat", "release": "minor"},
          {"type": "revert", "release": "patch"},
          {"breaking": true, "release": "major"}
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "ğŸš€ Features"},
            {"type": "fix", "section": "ğŸ› Bug Fixes"},
            {"type": "perf", "section": "âš¡ Performance Improvements"},
            {"type": "revert", "section": "âª Reverts"},
            {"type": "docs", "section": "ğŸ“š Documentation", "hidden": false},
            {"type": "style", "section": "ğŸ’ Styles", "hidden": true},
            {"type": "refactor", "section": "ğŸ“¦ Code Refactoring"},
            {"type": "test", "section": "ğŸš¨ Tests", "hidden": true},
            {"type": "build", "section": "ğŸ›  Build System", "hidden": true},
            {"type": "ci", "section": "âš™ï¸ Continuous Integration", "hidden": true}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines."
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {"path": "dist/*.tar.gz", "label": "Python Source Distribution"},
          {"path": "dist/*.whl", "label": "Python Wheel Distribution"}
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
